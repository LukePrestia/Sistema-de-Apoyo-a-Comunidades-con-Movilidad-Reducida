{{#partial "contenido" }}


  <title>Sugerencia de Incidentes</title>
  <link rel="stylesheet" href="css/sugerencia.css">
   <style>
     body {
        font-family: Arial, sans-serif;
        background-color: #f0f0f0;
        margin: 0;
        padding: 0;
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: center;
        height: 100vh;
      }

      .incident-list-container {
        background-color: #fff;
        border-radius: 8px;
        box-shadow: 0px 0px 10px rgba(0, 0, 0, 0.1);
        padding: 20px;
        width: 80%;
        text-align: center;
      }

      .incident-list-container h2 {
        margin-bottom: 20px;
      }

      .excel-table table {
        width: 100%;
        border-collapse: collapse;
        border: 1px solid #ccc;
      }

      .excel-table th, .excel-table td {
        border: 1px solid #ccc;
        padding: 8px;
        text-align: center;
      }

      .excel-table th {
        background-color: #f2f2f2;
      }

      .excel-table tbody tr:nth-child(even) {
        background-color: #f2f2f2;
      }

      .excel-table tbody tr:hover {
        background-color: #ddd;
      }

      .button-container {
        margin-top: 20px;
      }

      .incident-list-container {
        border: none;
        border-radius: 4px;
        padding: 10px 20px;
        cursor: pointer;
        font-size: 16px;
        transition: background-color 0.3s ease;
      }

      .red-button {
        background-color: #ff5252;
        color: #fff;
      }

      .green-button {
        background-color: #4caf50;
        color: #fff;
      }

      .lightblue-button {
        background-color: #03aefd;
        color: #fff;
      }
  </style>
<body>
  <div class="container">
    <h1>Incidentes Sugeridos</h1>
    <div class="incident-list">
      <ul>
        {{#each sugeridos}}
          <li>
            <h3>{{this.titulo}}</h3>
            <p><strong>Entidad:</strong> {{this.entidad.nombre}}</p>
            <p><strong>Servicio:</strong> {{this.servicio.servicio.tipo}}</p>
            <p>
              <a class="btn btn-secondary" href="/incidentes/{{this.id}}/cerrar"><svg class="svg-inline--fa fa-trash" aria-hidden="true" focusable="false" data-prefix="fas" data-icon="trash" role="img" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 448 512" data-fa-i2svg=""><path fill="currentColor" d="M135.2 17.7L128 32H32C14.3 32 0 46.3 0 64S14.3 96 32 96H416c17.7 0 32-14.3 32-32s-14.3-32-32-32H320l-7.2-14.3C307.4 6.8 296.3 0 284.2 0H163.8c-12.1 0-23.2 6.8-28.6 17.7zM416 128H32L53.2 467c1.6 25.3 22.6 45 47.9 45H346.9c25.3 0 46.3-19.7 47.9-45L416 128z"></path></svg><!-- <i class="fa-solid fa-trash"></i> Font Awesome fontawesome.com --></a>
              </p>
          </li>
        {{/each}}
      </ul>
    </div>
    <div class="form-group">
      <br>
      <a href="/login" class="btn btn-primary">Volver</a>
    </div>
  </div>
  <script src="../public/js/sugerencia.js"></script>

