{{#partial "contenido" }}
    <style>
        .comunidades {
            background-color: #fff;
            border-radius: 8px;
            box-shadow: 0px 0px 10px rgba(0, 0, 0, 0.1);
            padding: 20px;
            margin-right: auto;
            width: 50%;
            margin-left: auto;
            text-align: center;
        }
        .container {
            max-width: 600px;
            margin: 0 auto;
            padding: 20px;
            background-color: #ffffff;
            border-radius: 10px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.2);
        }
        h1 {
            color: #333;
        }
        .btn {
            padding: 10px 20px;
            margin: 10px;
            border: none;
            cursor: pointer;
            border-radius: 5px;
            font-weight: bold;
        }
        .btn-primary {
            background-color: #007bff;
            color: #fff;
        }
        .btn-danger {
            background-color: #ff0000;
            color: #fff;
        }
        .user-list {
            text-align: left;
            margin-top: 20px;
        }
    </style>
    <link rel="stylesheet" href="/css/estiloLogin.css">
    {{#if unido}}
        <div class="alert alert-success" role="alert">
            Te uniste con exito
        </div>
    {{/if}}
    <br>
    <br>

    <div class="comunidades">

        <h2>Unirse a Una comunidad</h2>
        <form method="POST" action="/comunidades" >
        <span>Comunidades:</span>
        <select name="comunidad" id="comunidad"required>
            {{#each comunidades}}
                <option value="{{this.id}}">{{this.nombre}}</option>
            {{/each}}
        </select>
            <select name="rol" id="rol"required>
                <option value="false">Observador</option>
                <option value="true">Afectado</option>
            </select>
            <br><br>
            <button type="submit"class="btn btn-primary" >Unirse</button>

        </form>
        <br>
        <div class="form-group">
            <br>
            <form method="GET"  action="/login"  id="dataEntryForm">
                <button type="submit"  class="btn btn-primary">Volver</button>
            </form>
        </div>
    </div>
{{/partial}}
{{> templates/base }}