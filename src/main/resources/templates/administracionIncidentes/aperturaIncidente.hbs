{{#partial "contenido" }}



        <style>
            .aperturaIncidente {
                background-color: #fff;
                border-radius: 8px;
                box-shadow: 0px 0px 10px rgba(0, 0, 0, 0.1);
                padding: 20px;
                margin-right: auto;
                width: 50%;
                margin-left: auto;
                text-align: center;
            }
            .container {
                max-width: 600px;
                margin: 0 auto;
                padding: 20px;
                background-color: #ffffff;
                border-radius: 10px;
                box-shadow: 0 0 10px rgba(0, 0, 0, 0.2);
            }
            h1 {
                color: #333;
            }
            .btn {
                padding: 10px 20px;
                margin: 10px;
            border: none;
            cursor: pointer;
            border-radius: 5px;
            font-weight: bold;
        }
        .btn-primary {
            background-color: #007bff;
            color: #fff;
        }
        .btn-danger {
            background-color: #ff0000;
            color: #fff;
        }
        .user-list {
            text-align: left;
            margin-top: 20px;
        }
    </style>
        <link rel="stylesheet" href="/css/estiloLogin.css">
<div class="aperturaIncidente" id="apertura" style="display: block;">

    <h2>Ingrese los datos del incidente</h2>
    <form method="POST"  action="/incidentes"  id="dataEntryForm">

        <span>Entidad:</span>
        <br>
        <select name="entidad" id="entidad" required>
            {{#each entidad}}
                <option value="{{this.nombre}}">{{this.nombre}}</option>
            {{/each}}
        </select>
        <br>
        <span>Establecimiento:</span>
        <br>
        <select name="establecimiento" id="establecimiento"required>
            {{#each establecimiento}}
                <option value="{{this.nombre}}">{{this.nombre}}</option>
            {{/each}}
        </select>
        <br>
        <span>Servicio:</span>
        <br>
        <select name="servicio" id="servicio" required>
            {{#each servicoTipo}}
            <option value="{{this.tipo}}">{{this.tipo}}</option>
            {{/each}}
        </select>
        <br>
        <br>
        <button type="submit"class="btn btn-primary" >Reportar Incidente</button>

    </form>
    <div class="form-group">
      <br>
        <form method="GET"  action="/login"  id="dataEntryForm">
            <button type="submit"  class="btn btn-primary">Volver</button>
        </form>
  </div>
  </div>


{{/partial}}
