{{#partial "contenido" }}
    <style>
        aperturaOrganismo {
            background-color: #fff;
            border-radius: 8px;
            box-shadow: 0px 0px 10px rgba(0, 0, 0, 0.1);
            padding: 20px;
            margin-right: auto;
            width: 50%;
            margin-left: auto;
            text-align: center;
        }

        h2 {
            color: #333;
        }
        .btn {
            padding: 10px 20px;
            margin: 10px;
            border: none;
            cursor: pointer;
            border-radius: 5px;
            font-weight: bold;
        }
        .btn-primary {
            background-color: #007bff;
            color: #fff;
        }
        .btn-danger {
            background-color: #ff0000;
            color: #fff;
        }
        .user-list {
            text-align: left;
            margin-top: 20px;
        }
    </style>
    <link rel="stylesheet" href="/css/estiloLogin.css">
    <div class="aperturaOrganismo" id="apertura" style="display: block;background-color: #fff;
            border-radius: 8px;
            box-shadow: 0px 0px 10px rgba(0, 0, 0, 0.1);
            padding: 20px;
            margin-right: auto;
            width: 50%;
            margin-left: auto;
            text-align: center;">
        <h2>Seleccione los archivos para carga masiva</h2>
        <form method="POST" action="/organismos/crear" id="dataEntryForm" enctype="multipart/form-data">
            <span>Archivo CSV de Organismos:</span>
            <br>
            <span>CLASE,N-ORGANISMO</span>
            <br>
            <input name="archivoOrganismos" type="file" id="archivo-organismos" accept=".csv">
            <br>
            <br>

            <span>Archivo CSV de Prestadoras:</span>
            <br>
            <span>CLASE,N-ORGANISMO,N-PRESTADORA1;N-PRESTADORA2...</span>
            <br>
            <input name="archivoPrestadoras" type="file" id="archivo-prestadoras" accept=".csv">
            <br>
            <br>

            <span>Archivo CSV de Entidades:</span>
            <br>
            <span>CLASE,N-PRESTADORA,N-ENTIDAD1;N-ENTIDAD2...</span>
            <br>
            <input name="archivoEntidades" type="file" id="archivo-entidades" accept=".csv">
            <br>
            <br>

            <span>Archivo CSV de Establecimientos:</span>
            <br>
            <span>CLASE,NOMBRE_ENTIDAD,N-ESTABLECIMIENTO1;N-ESTABLECIMIENTO2...</span>
            <br>
            <input name="archivoEstablecimientos" type="file" id="archivo-establecimientos" accept=".csv">
            <br>
            <br>

            <span>Archivo CSV de Servicios:</span>
            <br>
            <span>CLASE,N-ESTABLECIMIENTO,SERVICIO1;SERVICIO2...</span>
            <br>
            <input name="archivoServicios" type="file" id="archivo-servicios" accept=".csv">
            <br>
            <br>

            <button type="submit" class="btn btn-primary">Procesar datos</button>
        </form>
        <div class="form-group">
            <br>
            <form method="GET"  action="/login"  id="dataEntryForm">
                <button type="submit"  class="btn btn-primary">Volver</button>
            </form>
        </div>
    </div>

{{/partial}}
