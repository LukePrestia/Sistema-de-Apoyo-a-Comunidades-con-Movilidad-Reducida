{{#partial "contenido" }}

    <title>ABM de Usuarios</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            text-align: center;
            background-color: #f0f0f0;
        }
        .container {
            max-width: 600px;
            margin: 0 auto;
            padding: 20px;
            background-color: #ffffff;
            border-radius: 10px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.2);
        }
        h1 {
            color: #333;
        }
        .btn {
            padding: 10px 20px;
            margin: 10px;
            border: none;
            cursor: pointer;
            border-radius: 5px;
            font-weight: bold;
        }
        .btn-primary {
            background-color: #007bff;
            color: #fff;
        }
        .btn-danger {
            background-color: #ff0000;
            color: #fff;
        }
        .user-list {
            text-align: left;
            margin-top: 20px;
        }
    </style>
    <div class="container">
        <h1>Usuario</h1>
        <form method="POST"  action="/usuarios/{{usuarios.id}}/editar"  id="formulario" style="display: block;">
            <span>Nombre:</span>
            <br>
            <input name="nombre" type="text" id="nombre" value="{{usuarios.nombreUsuario}}">
            <br>
            <span>Correo:</span>
            <br>
            <input name="correo" type="text" id="correo" value="{{usuarios.persona.mail}}">
            <br>
            <span>Contrase√±a:</span>
            <br>
            <input name="contrasena" type="text" id="contrasena">
            <br>
            <select name="rol" id="rol">
                <option value="admin">Administrador</option>
                <option value="miembro">Miembro</option>
            </select>
            <br>
            <button type="submit" class="btn btn-primary" id="guardarUsuario">Guardar</button>
        </form>
        <div class="form-group">
            <br>
            <form method="GET"  action="/login"  id="dataEntryForm">
                <button type="submit"  class="btn btn-primary">Volver</button>
            </form>
        </div>

    </div>


{{/partial}}
{{> templates/base }}

